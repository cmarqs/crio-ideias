.navbar.navbar-light.fixed-top.navbar-expand-lg.bg-light
  .container
    a.navbar-brand(href='/')
      i.fas.fa-lightbulb
      | Crio Ideias
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='.navbar-collapse')
      span.sr-only Toggle navigation
      span.navbar-toggler-icon
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li.nav-item(class=(title === 'Ideias') ? 'active' : undefined)
          a.nav-link(href='/') Ideias (Home)
        //- admin menu
        if user && user.isAdmin
          li.nav-item(class=(title === 'Admin - Ideias') ? 'active' : undefined)
            a.nav-link(href='/admin/ideas') Gest√£o de Ideias
        //- li.nav-item(class=(title === 'Contact') ? 'active' : undefined)
        //-   a.nav-link(href='/contact') Contact
        //- li.nav-item(class=(title === 'Status') ? 'active' : undefined)
        //-   a.nav-link(href='/status') Status
      ul.nav.navbar-nav.ml-auto
        if !user
          li.nav-item(class=(title === 'Login') ? 'active' : undefined)
            a.nav-link(href='/login') Login
          li.nav-item(class=(title === 'Criar Login') ? 'active' : undefined)
            a.nav-link(href='/signup') Criar Login
        else
          li.dropdown(class=(title === 'Meu Perfil') ? 'active' : undefined).nav-item
            a.dropdown-toggle.nav-link(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            div.dropdown-menu
              a.dropdown-item(href='/account') Meu Perfil
              div.dropdown-divider
              a.dropdown-item(href='/logout') Sair (Logoff)
